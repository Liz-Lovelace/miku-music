datasource db {
  provider = "sqlite"
  url      = "file:./prod.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  uuid         String  @id
  username     String  @unique
  usernameLowercase String  @unique
  passwordHash String
  salt         String
  tracks       Track[]
}

model Track {
  uuid            String  @id
  title           String
  ext             String
  album           String?
  length          Float
  extractor       String?
  track_url       String
  image_url       String?
  download_status String  @default("awaiting download")
  upvotes         Int     @default(0)
  times_listened  Int     @default(0)
  owner           User    @relation(fields: [ownerId], references: [uuid])
  ownerId         String
  createdAt       DateTime @default(now())
}
